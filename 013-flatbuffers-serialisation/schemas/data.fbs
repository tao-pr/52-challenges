namespace Data;

// For more info:
// https://google.github.io/flatbuffers/flatbuffers_guide_tutorial.html

enum Status: byte { Operating=0, Suspended=1 }

table Route {
  stations: [string];
  status: Status=Operating;
  operator: string;
  numPerDay: short=1;
}

table Station {
  title: string;
  routes: [Route];
  capacity: short=100;
}

root_type Station;